<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XFSpeechToText"
             x:Class="XFSpeechToText.MainPage">

    <StackLayout Orientation="Vertical">
        <Button x:Name="btnRecord" Text="Record" />
        <Button x:Name="btnStop" Text="Stop" />
        <Button x:Name="btnPlay" Text="Play" />
        <Button x:Name="btnToText" Text="Get Text" />
        <Label x:Name="lblText" BackgroundColor="LightGray" />
    </StackLayout>

</ContentPage>
